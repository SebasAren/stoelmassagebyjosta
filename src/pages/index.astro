---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import ServiceCard from "../components/ServiceCard.astro";
import Testimonial from "../components/Testimonial.astro";
import BookingButton from "../components/BookingButton.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import { getCollection } from "astro:content";

const siteSettings = await getCollection("siteSettings");
const siteData = siteSettings[0]?.data;

const services = await getCollection(
  "services",
  (entry) => entry.data.featured,
);
const featuredServices = services
  .sort((a, b) => a.data.order - b.data.order)
  .slice(0, 3);

const benefits = await getCollection("benefits");
const sortedBenefits = benefits.sort((a, b) => a.data.order - b.data.order);

const testimonials = await getCollection(
  "testimonials",
  (entry) => entry.data.featured,
);
const featuredTestimonials = testimonials
  .sort((a, b) => a.data.order - b.data.order)
  .slice(0, 3);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={siteData?.siteTitle || SITE_TITLE}
      description={siteData?.siteDescription || SITE_DESCRIPTION}
    />
  </head>
  <body>
    <Header />
    <main>
      <!-- Hero Section -->
      <section class="hero">
        <div class="container">
          <h1>{siteData?.heroHeadline || "Relax, Rejuvenate, Restore"}</h1>
          <p>
            {
              siteData?.heroDescription ||
                "Experience the healing power of professional massage therapy with personalized treatments designed to melt away stress and restore balance to your body and mind."
            }
          </p>
          <div class="hero-buttons">
            <BookingButton text="Book Your Session" size="large" />
            <a href="/services" class="btn btn-outline">View Services</a>
          </div>
        </div>
      </section>

      <!-- Services Overview -->
      <section class="section section-light">
        <div class="container">
          <div class="text-center mb-4">
            <h2>Our Services</h2>
            <p>
              Choose from a variety of massage therapies tailored to your
              specific needs
            </p>
          </div>
          <div class="grid grid-3">
            {
              featuredServices.map((service) => (
                <ServiceCard
                  title={service.data.title}
                  description={service.data.description}
                  duration={service.data.duration}
                  price={service.data.price}
                  featured={service.data.featured}
                />
              ))
            }
          </div>
          <div class="text-center mt-3">
            <a href="/services" class="btn btn-secondary">View All Services</a>
          </div>
        </div>
      </section>

      <!-- Benefits Section -->
      <section class="section">
        <div class="container">
          <div class="text-center mb-4">
            <h2>Benefits of Massage Therapy</h2>
            <p>
              Discover how regular massage can transform your health and
              well-being
            </p>
          </div>
          <div class="grid grid-2">
            {
              sortedBenefits.map((benefit) => (
                <div class="benefit-item">
                  <h3>{benefit.data.title}</h3>
                  <p>{benefit.data.description}</p>
                </div>
              ))
            }
          </div>
        </div>
      </section>

      <!-- Testimonials -->
      <section class="section section-light">
        <div class="container">
          <div class="text-center mb-4">
            <h2>What Our Clients Say</h2>
            <p>
              Real experiences from real clients who have found relief and
              relaxation
            </p>
          </div>
          <div class="grid grid-3">
            {
              featuredTestimonials.map((testimonial) => (
                <Testimonial
                  name={testimonial.data.name}
                  text={testimonial.data.text}
                  service={testimonial.data.service}
                  date={testimonial.data.date}
                />
              ))
            }
          </div>
        </div>
      </section>

      <!-- CTA Section -->
      <section class="section">
        <div class="container">
          <div class="cta-section text-center">
            <h2>Ready to Experience the Benefits?</h2>
            <p>
              Take the first step toward relaxation and healing. Book your
              appointment today and discover the transformative power of
              professional massage therapy.
            </p>
            <BookingButton
              text="Book Your Appointment Now"
              size="large"
              variant="secondary"
            />
          </div>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>

<style>
  .hero-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 2rem;
  }

  .benefit-item {
    text-align: center;
    padding: 2rem;
  }

  .benefit-item h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--accent);
  }

  .benefit-item p {
    color: var(--text-light);
    line-height: 1.6;
  }

  .cta-section {
    max-width: 800px;
    margin: 0 auto;
    padding: 3rem 2rem;
    background: var(--secondary);
    border-radius: 15px;
    box-shadow: var(--shadow);
  }

  .cta-section h2 {
    margin-bottom: 1.5rem;
  }

  .cta-section p {
    margin-bottom: 2rem;
    font-size: 1.1rem;
    color: var(--text-light);
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .hero-buttons {
      flex-direction: column;
      align-items: center;
    }

    .hero-buttons .btn {
      width: 100%;
      max-width: 300px;
    }

    .benefit-item {
      padding: 1.5rem;
    }

    .cta-section {
      padding: 2rem 1.5rem;
    }
  }
</style>
