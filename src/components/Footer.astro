---
import { getCollection } from "astro:content";
const today = new Date();

const siteSettings = await getCollection("siteSettings");
const siteData = siteSettings[0]?.data;

const navigation = await getCollection(
  "navigation",
  (entry) => entry.data.order,
);
const sortedNavigation = navigation.sort((a, b) => a.data.order - b.data.order);
---

<footer>
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <h3>{siteData?.businessName || "Josta Raapis-Dingman Massages"}</h3>
        <p>
          {
            siteData?.tagline ||
              "Professional massage therapy services to help you relax, rejuvenate, and restore balance to your body and mind."
          }
        </p>
      </div>

      <div class="footer-section">
        <h4>Contact Info</h4>
        <p><strong>Phone:</strong> {siteData?.phone || "(555) 123-4567"}</p>
        <p>
          <strong>Email:</strong>
          {siteData?.email || "info@jostamassage.com"}
        </p>
        <p>
          <strong>Address:</strong>
          {
            siteData?.address?.replace(/, /g, "<br />") ||
              "123 Wellness Street<br />Relaxation City, RC 12345"
          }
        </p>
      </div>

      <div class="footer-section">
        <h4>Business Hours</h4>
        <p>
          <strong>Monday - Friday:</strong>
          {siteData?.weekdaysHours || "9:00 AM - 7:00 PM"}
        </p>
        <p>
          <strong>Saturday:</strong>
          {siteData?.saturdayHours || "9:00 AM - 5:00 PM"}
        </p>
        <p>
          <strong>Sunday:</strong>
          {siteData?.sundayHours || "10:00 AM - 4:00 PM"}
        </p>
      </div>

      <div class="footer-section">
        <h4>Quick Links</h4>
        <ul>
          {
            sortedNavigation.map((item) => (
              <li>
                <a href={item.data.url}>{item.data.label}</a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <div class="footer-bottom">
      <p>
        &copy; {today.getFullYear()}
        {siteData?.businessName || "Josta Raapis-Dingman Massages"}. All rights
        reserved.
      </p>
    </div>
  </div>
</footer>
<style>
  footer {
    background: var(--text);
    color: var(--white);
    padding: 3rem 0 1rem 0;
    margin-top: 4rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer-section h3,
  .footer-section h4 {
    color: var(--primary);
    margin-bottom: 1rem;
    font-size: 1.2rem;
  }

  .footer-section h3 {
    font-size: 1.4rem;
  }

  .footer-section p {
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-section ul li {
    margin-bottom: 0.5rem;
  }

  .footer-section a {
    color: var(--white);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-section a:hover {
    color: var(--primary);
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 1rem;
    text-align: center;
    color: rgba(255, 255, 255, 0.7);
  }

  @media (max-width: 768px) {
    footer {
      padding: 2rem 0 1rem 0;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .footer-section {
      text-align: center;
    }
  }
</style>
